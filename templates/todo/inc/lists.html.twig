{# View all lists for current user #}

<h4>Lists</h4>
<ul class="list-unstyled">
    {% for item in lists %}
        <li>
            <div class="row">
                <a href="{{ path('list_page', {'listId': item.id}) }}" class="col">{{ item.title }}</a>
                {% if item.title != "Inbox" %}
                    <a href="{{ path('edit_list', {'listId': item.id}) }}" class="edit-list btn btn-outline-info btn-sm"><i class="fas fa-pencil-alt"></i></a>
                    <button type="button" class="remove-list btn btn-outline-danger btn-sm" data-list-id="{{ item.id }}">X</button>
                {% endif %}
            </div>
        </li>
    {% endfor %}
</ul>