{# Render form for add task #}

<div class="mt-3 mb-3">
    {{ form_start(addTaskForm) }}
        <div class="form-row align-items-center">
            <div class="col-sm">
                {{ form_row(addTaskForm.title, {'attr': {
                    'class': 'form-control',
                    'placeholder': 'What to do'
                }}) }}
            </div>
            <div class="col-sm-auto">
                {{ form_row(addTaskForm.dueDate, {'attr':{
                    'class': 'form-control'
                }}) }}
            </div>
            <div class="col-sm-auto">
                {{ form_row(addTaskForm.listId, {'attr':{
                    'class': 'form-control'
                }}) }}
            </div>
            <div class="col-sm-auto">
                {{ form_row(addTaskForm.save, {'attr':{
                    'class': 'btn btn-primary'
                }}) }} 
            </div>
        </div>
    {{ form_end(addTaskForm) }}
</div>